<section
    id="hero"
    class="relative w-full h-screen flex flex-col items-center justify-center overflow-hidden"
>
    <!-- 3D Scene Container (Desktop Only) -->
    <div
        id="canvas-container"
        class="fixed inset-0 z-0 w-full h-full pointer-events-none hidden md:block"
    >
    </div>

    <!-- Hero Content -->
    <div
        class="absolute top-[15vh] w-full z-10 flex flex-col items-center text-center px-4 pointer-events-auto"
    >
        <div
            id="hero-badge"
            class="mb-6 px-4 py-1 rounded-full border border-white/10 bg-white/5 backdrop-blur-sm"
        >
            <span
                class="text-sm font-medium tracking-widest text-white/80 uppercase"
            >
                Stickers de Alta Tecnología
            </span>
        </div>

        <h1
            id="hero-title"
            class="text-4xl md:text-6xl font-black tracking-tight mb-8 uppercase max-w-4xl"
        >
            <span
                class="bg-clip-text text-transparent bg-gradient-to-br from-white via-slate-100 to-slate-400 block leading-tight"
            >
                Pega el estilo y date un respiro
            </span>
        </h1>

        <a
            id="hero-cta"
            href="#technology"
            class="px-12 py-4 bg-white/10 backdrop-blur-md border border-white/10 hover:border-primary rounded-full transition-colors duration-300"
        >
            <span class="text-white font-light tracking-wide uppercase">
                Ver Colección
            </span>
        </a>

        <!-- Mobile Sticker (Below CTA, inside hero flow) -->
        <div class="md:hidden mt-12 mobile-sticker-wrap">
            <img
                src="/assets/images/tech-illustration.png"
                alt="Eheco-Stick"
                class="mobile-sticker w-[55vw] max-w-[280px] object-contain opacity-0"
            />
        </div>
    </div>
</section>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const isMobile = window.innerWidth < 768;

    if (!isMobile) {
        // Desktop: Load full 3D scene
        import("../scripts/sticker-scene").then(({ initStickerScene }) => {
            initStickerScene("canvas-container");
        });
    } else {
        // Mobile: Fade in the PNG sticker
        gsap.to(".mobile-sticker", {
            opacity: 0.9,
            scale: 1,
            duration: 1.5,
            delay: 1.2,
            ease: "power3.out",
        });

        // Subtle floating animation
        gsap.to(".mobile-sticker", {
            y: -8,
            duration: 3,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 2.5,
        });

        // Fade out PNG on scroll (leaves with the hero)
        gsap.to(".mobile-sticker-wrap", {
            opacity: 0,
            y: -30,
            ease: "power2.in",
            scrollTrigger: {
                trigger: "#hero",
                start: "70% top",
                end: "bottom top",
                scrub: 1,
            },
        });
    }

    // Hero Content Animation (both desktop & mobile)
    const tl = gsap.timeline({
        defaults: { ease: "power3.out" },
    });

    tl.from(
        "#hero-badge",
        {
            y: -20,
            opacity: 0,
            duration: 1,
        },
        1.2,
    );

    tl.from(
        "#hero-title span",
        {
            y: 50,
            opacity: 0,
            duration: 1.5,
            stagger: 0.1,
        },
        1.5,
    );

    tl.from(
        "#hero-cta",
        {
            y: 20,
            opacity: 0,
            duration: 1,
        },
        "-=0.8",
    );
</script>

<style>
    .mobile-sticker {
        transform: scale(0.9);
        filter: drop-shadow(0 0 30px rgba(74, 222, 128, 0.15));
    }
</style>
