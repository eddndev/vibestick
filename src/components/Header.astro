                </svg>
            </a>
            <a
                href="https://www.tiktok.com/@vibe.stick4?lang=es-419"
                target="_blank"
                class="hover:text-secondary hover:scale-110 transition-all"
                aria-label="TikTok"
            >
                <svg
                    viewBox="0 0 16 16"
                    width="20"
                    height="20"
                    fill="currentColor"
                >
                    <path
                        d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"
                    ></path>
                </svg>
            </a>
        </div>

        <!-- Mobile Hamburger Button -->
        <button
            id="mobile-menu-btn"
            class="md:hidden flex flex-col gap-1.5 p-2 group"
            aria-label="Abrir menú"
        >
            <span
                class="hamburger-line w-6 h-[2px] bg-white transition-all duration-300 origin-center"
            ></span>
            <span
                class="hamburger-line w-6 h-[2px] bg-white transition-all duration-300"
            ></span>
            <span
                class="hamburger-line w-4 h-[2px] bg-white transition-all duration-300 origin-center ml-auto"
            ></span>
        </button>
    </nav>
</header>

<!-- Mobile Menu Overlay (OUTSIDE header to avoid GSAP transform breaking fixed positioning) -->
<div
    id="mobile-menu"
    class="md:hidden fixed left-0 right-0 bottom-0 bg-void/95 backdrop-blur-xl translate-x-full transition-transform duration-500 ease-out z-40"
    style="top: 65px;"
>
    <div class="flex flex-col items-center justify-center h-full gap-8">
        {
            links.map((link) => (
                <a
                    href={link.href}
                    class="mobile-nav-link text-2xl font-light uppercase text-muted hover:text-white transition-colors"
                    data-mobile-link
                >
                    {link.label}
                </a>
            ))
        }

        <!-- Mobile Social Icons -->
        <div class="flex gap-6 mt-8 pt-8 border-t border-white/10">
            <a
                href="https://www.instagram.com/vibestick0/"
                target="_blank"
                class="text-muted hover:text-secondary hover:scale-110 transition-all"
                aria-label="Instagram"
            >
                <svg
                    viewBox="0 0 16 16"
                    width="24"
                    height="24"
                    fill="currentColor"
                >
                    <path
                        d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.844.047 1.097.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.282.11-.705.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"
                    ></path>
                </svg>
            </a>
            <a
                href="https://www.tiktok.com/@vibe.stick4?lang=es-419"
                target="_blank"
                class="text-muted hover:text-secondary hover:scale-110 transition-all"
                aria-label="TikTok"
            >
                <svg
                    viewBox="0 0 16 16"
                    width="24"
                    height="24"
                    fill="currentColor"
                >
                    <path
                        d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3V0Z"
                    ></path>
                </svg>
            </a>
        </div>
    </div>
</div>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const lines = btn?.querySelectorAll(".hamburger-line");
    let isOpen = false;

    btn?.addEventListener("click", () => {
        isOpen = !isOpen;

        if (isOpen) {
            menu?.classList.remove("translate-x-full");
            menu?.classList.add("translate-x-0");
            // Animate hamburger to X
            if (lines && lines.length === 3) {
                (lines[0] as HTMLElement).style.transform =
                    "rotate(45deg) translateY(5px)";
                (lines[1] as HTMLElement).style.opacity = "0";
                (lines[2] as HTMLElement).style.transform =
                    "rotate(-45deg) translateY(-5px)";
                (lines[2] as HTMLElement).style.width = "1.5rem";
            }
        } else {
            menu?.classList.add("translate-x-full");
            menu?.classList.remove("translate-x-0");
            // Reset hamburger
            if (lines && lines.length === 3) {
                (lines[0] as HTMLElement).style.transform = "";
                (lines[1] as HTMLElement).style.opacity = "1";
                (lines[2] as HTMLElement).style.transform = "";
                (lines[2] as HTMLElement).style.width = "1rem";
            }
        }
    });

    // Close menu on link click
    document.querySelectorAll("[data-mobile-link]").forEach((link) => {
        link.addEventListener("click", () => {
            isOpen = false;
            menu?.classList.add("translate-x-full");
            menu?.classList.remove("translate-x-0");
            if (lines && lines.length === 3) {
                (lines[0] as HTMLElement).style.transform = "";
                (lines[1] as HTMLElement).style.opacity = "1";
                (lines[2] as HTMLElement).style.transform = "";
                (lines[2] as HTMLElement).style.width = "1rem";
            }
        });
    });
</script>
