---
const title = "Vibestick";

const links = [
    { href: "/#info-section", label: "Inicio" },
    { href: "/#tech-section", label: "Tecnología" },
    { href: "/#mission-section", label: "Misión" },
    { href: "/#join-section", label: "Únete" },
    { href: "/invertir", label: "Invertir" },
];

const { pathname } = Astro.url;
---

<header
    id="main-header"
    class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-white/5 bg-void/80 backdrop-blur-xl opacity-0"
>
    <nav
        class="max-w-[1600px] mx-auto flex items-center justify-between px-4 py-4 md:px-8"
    >
        <!-- Logo -->
        <h2 class="text-2xl font-black tracking-tight">
            <a
                href="/"
                class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent uppercase hover:opacity-80 transition-opacity"
            >
                {title}
            </a>
        </h2>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex gap-8 items-center">
            {
                links.map((link) => {
                    return (
                        <a
                            href={link.href}
                            class="text-sm font-light uppercase transition-colors relative py-1 text-muted hover:text-white"
                        >
                            {link.label}
                        </a>
                    );
                })
            }
        </div>

        <!-- Social Icons (Desktop) -->
        <div class="hidden md:flex gap-4 items-center text-muted">
            <a
                href="https://www.instagram.com/vibestick0/"
                target="_blank"
                class="hover:text-secondary hover:scale-110 transition-all"
                aria-label="Instagram"
            >
                <svg
                    viewBox="0 0 16 16"
                    width="20"
                    height="20"
                    fill="currentColor"
                >
                    <path
                        d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.844.047 1.097.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.282.11-.705.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"
