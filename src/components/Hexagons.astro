<div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
    <!-- Large Hexagon 1 -->
    <svg
        class="absolute top-[10%] left-[5%] w-[40vw] h-[40vw] text-primary/5 opacity-50 animate-float-slow"
        viewBox="0 0 100 100"
        fill="currentColor"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>

    <!-- Large Hexagon 2 (Stroke only) -->
    <svg
        class="absolute top-[40%] right-[-10%] w-[60vw] h-[60vw] text-white/5 animate-float-delayed"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="0.5"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>

    <!-- Medium Hexagon 3 -->
    <svg
        class="absolute bottom-[-10%] left-[20%] w-[30vw] h-[30vw] text-primary/10 opacity-30 animate-pulse-slow"
        viewBox="0 0 100 100"
        fill="currentColor"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>

    <!-- Small Hexagon 4 (Stroke) -->
    <svg
        class="absolute top-[15%] right-[20%] w-[15vw] h-[15vw] text-white/10 animate-float-slow"
        viewBox="0 0 100 100"
        fill="none"
        stroke="currentColor"
        stroke-width="1"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>
</div>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(2deg);
        }
    }

    @keyframes float-delayed {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(20px) rotate(-2deg);
        }
    }

    .animate-float-slow {
        animation: float 10s ease-in-out infinite;
    }

    .animate-float-delayed {
        animation: float-delayed 12s ease-in-out infinite;
        animation-delay: 2s;
    }

    .animate-pulse-slow {
        animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
