<div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
    <!-- Large Hexagon 1 -->
    <svg
        class="hex-shape hex-1 absolute top-[10%] left-[5%] w-[40vw] h-[40vw] text-primary/5 opacity-50"
        viewBox="0 0 100 100"
        fill="currentColor"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>

    <!-- Large Hexagon 2 (Stroke only) - Wrapped for layered animation -->
    <div class="hex-2-wrap absolute inset-0">
        <svg
            class="hex-shape hex-2 absolute top-[40%] right-[-10%] w-[60vw] h-[60vw]"
            viewBox="0 0 100 100"
            fill="none"
            stroke="rgba(255,255,255,0.08)"
            stroke-width="0.5"
        >
            <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
        </svg>
    </div>

    <!-- Medium Hexagon 3 -->
    <svg
        class="hex-shape hex-3 absolute bottom-[-10%] left-[20%] w-[30vw] h-[30vw] text-primary/10 opacity-30"
        viewBox="0 0 100 100"
        fill="currentColor"
    >
        <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
    </svg>

    <!-- Small Hexagon 4 (Stroke) - Wrapped for layered animation -->
    <div class="hex-4-wrap absolute inset-0">
        <svg
            class="hex-shape hex-4 absolute top-[15%] right-[20%] w-[15vw] h-[15vw]"
            viewBox="0 0 100 100"
            fill="none"
            stroke="rgba(255,255,255,0.08)"
            stroke-width="0.5"
        >
            <path d="M50 0 L93.3 25 V75 L50 100 L6.7 75 V25 Z"></path>
        </svg>
    </div>
</div>
