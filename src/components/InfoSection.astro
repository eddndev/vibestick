<section
    id="info-section"
    class="relative w-full min-h-screen flex items-center justify-center pointer-events-auto"
>
    <!-- Background Content is implicit (3D scene behind) -->

    <div
        class="container mx-auto px-6 md:px-12 grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
    >
        <!-- Left Side: Empty for 3D Model -->
        <div class="hidden md:block"></div>

        <!-- Right Side: Informative Text -->
        <div class="flex flex-col gap-8 info-content opacity-0 translate-y-10">
            <div class="w-16 h-[2px] bg-primary mb-4 block"></div>

            <h2
                class="text-4xl md:text-6xl font-black uppercase tracking-tight text-white mb-4"
            >
                Diseño<br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-500"
                    >Ingeniería pura</span
                >
            </h2>

            <p
                class="text-lg md:text-xl text-muted font-light leading-relaxed max-w-lg"
            >
                Inspirado en la precisión aerodinámica. Cada curva del sticker
                está calculada para resistir y perdurar, integrando nuestra
                tecnología fotocatalítica en un perfil ultradelgado y
                resistente.
            </p>

            <div
                class="grid grid-cols-2 gap-8 mt-8 border-t border-white/5 pt-8"
            >
                <div>
                    <h4 class="text-3xl font-bold text-white mb-1">0.5mm</h4>
                    <p class="text-sm text-muted uppercase tracking-widest">
                        Espesor
                    </p>
                </div>
                <div>
                    <h4 class="text-3xl font-bold text-white mb-1">100%</h4>
                    <p class="text-sm text-muted uppercase tracking-widest">
                        Reciclable
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
        scrollTrigger: {
            trigger: "#info-section",
            start: "top 60%", // Trigger when section is coming into view
            end: "bottom 40%",
            toggleActions: "play none none reverse",
        },
    });

    tl.to(".info-content", {
        y: 0,
        opacity: 1,
        duration: 1,
        ease: "power3.out",
    });
</script>
