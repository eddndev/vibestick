<section
    id="info-section"
    class="relative w-full min-h-screen flex items-center justify-center pointer-events-auto"
>
    <!-- Background Content is implicit (3D scene behind) -->

    <div
        class="container mx-auto px-6 md:px-12 grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
    >
        <!-- Left Side: Empty for 3D Model -->
        <div class="hidden md:block"></div>

        <!-- Right Side: Informative Text -->
        <div class="flex flex-col gap-8 info-content opacity-0 translate-y-10">
            <div class="w-16 h-[2px] bg-primary mb-2 block"></div>

            <h2
                class="text-4xl md:text-5xl font-black uppercase tracking-tight text-white mb-2"
            >
                Eheco-Stick<br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-500"
                    >Tecnología Activa</span
                >
            </h2>

            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm md:text-base"
            >
                <div class="space-y-2">
                    <h3 class="text-primary font-bold uppercase tracking-wider">
                        Sostenibilidad
                    </h3>
                    <p class="text-muted leading-relaxed">
                        Comprometidos con soluciones ambientales de bajo
                        impacto.
                    </p>
                </div>
                <div class="space-y-2">
                    <h3
                        class="text-secondary font-bold uppercase tracking-wider"
                    >
                        Fotocatálisis
                    </h3>
                    <p class="text-muted leading-relaxed">
                        Nanopartículas de TiO₂ que eliminan contaminantes y
                        olores.
                    </p>
                </div>
                <div class="space-y-2">
                    <h3 class="text-primary font-bold uppercase tracking-wider">
                        Calidad
                    </h3>
                    <p class="text-muted leading-relaxed">
                        Altos estándares de excelencia en cada fabricación.
                    </p>
                </div>
                <div class="space-y-2">
                    <h3
                        class="text-secondary font-bold uppercase tracking-wider"
                    >
                        Aire Puro
                    </h3>
                    <p class="text-muted leading-relaxed">
                        Transformamos superficies en filtros inteligentes.
                    </p>
                </div>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6 border-t border-white/5 pt-8"
            >
                <div>
                    <h4 class="text-2xl md:text-3xl font-bold text-white mb-1">
                        97.6%
                    </h4>
                    <p class="text-xs text-muted uppercase tracking-widest">
                        Aceptación
                    </p>
                </div>
                <div>
                    <h4 class="text-2xl md:text-3xl font-bold text-white mb-1">
                        70%
                    </h4>
                    <p class="text-xs text-muted uppercase tracking-widest">
                        Degradación COVs
                    </p>
                </div>
                <div>
                    <h4 class="text-2xl md:text-3xl font-bold text-white mb-1">
                        12m
                    </h4>
                    <p class="text-xs text-muted uppercase tracking-widest">
                        Efecto Activo
                    </p>
                </div>
                <div>
                    <h4 class="text-2xl md:text-3xl font-bold text-white mb-1">
                        80%
                    </h4>
                    <p class="text-xs text-muted uppercase tracking-widest">
                        Fase Anatasa
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
        scrollTrigger: {
            trigger: "#info-section",
            start: "top 60%", // Trigger when section is coming into view
            end: "bottom 40%",
            toggleActions: "play none none reverse",
        },
    });

    tl.to(".info-content", {
        y: 0,
        opacity: 1,
        duration: 1,
        ease: "power3.out",
    });
</script>
