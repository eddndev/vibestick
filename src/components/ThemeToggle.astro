---
// ThemeToggle.astro
---

<button
    id="theme-toggle"
    title="Alternar tema"
    aria-label="Alternar tema"
    class="relative p-3 rounded-full bg-surface/50 backdrop-blur-md border border-white/10 text-primary hover:bg-surface hover:scale-110 transition-all duration-300 cursor-pointer group outline-none focus-visible:ring-2 focus-visible:ring-primary"
>
    <!-- Sun Icon (Hidden in Dark) -->
    <svg
        class="sun w-6 h-6 transition-transform duration-500 rotate-90 scale-0 dark:rotate-0 dark:scale-100 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
        ></path>
    </svg>

    <!-- Moon Icon (Hidden in Light) -->
    <svg
        class="moon w-6 h-6 transition-transform duration-500 rotate-0 scale-100 dark:-rotate-90 dark:scale-0"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
        ></path>
    </svg>
</button>

<style is:global>
    /* View Transition Styles */
    ::view-transition-old(root),
    ::view-transition-new(root) {
        animation: none;
        mix-blend-mode: normal;
    }

    /* Always put the NEW view on top */
    ::view-transition-new(root) {
        z-index: 9999;
    }
    ::view-transition-old(root) {
        z-index: 1;
    }

    /* We don't need conditional Z-index anymore if we ALWAYS grow the new view */
</style>

<script>
    const toggleBtn = document.getElementById("theme-toggle");

    const toggleTheme = async (event: MouseEvent) => {
        // 1. Check support
        if (!document.startViewTransition) {
            const isDark = document.documentElement.classList.toggle("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
            return;
        }

        // 2. Geometry
        const x = event.clientX;
        const y = event.clientY;
        const endRadius = Math.hypot(
            Math.max(x, innerWidth - x),
            Math.max(y, innerHeight - y),
        );

        // 3. Transition
        const transition = document.startViewTransition(async () => {
            const isDark = document.documentElement.classList.toggle("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });

        // 4. Animate NEW view growing
        await transition.ready;

        // Animate the element that is NEW (the one we are switching TO)
        document.documentElement.animate(
            {
                clipPath: [
                    `circle(0px at ${x}px ${y}px)`,
                    `circle(${endRadius}px at ${x}px ${y}px)`,
                ],
            },
            {
                duration: 470,
                easing: "ease-in-out",
                // ALWAYS animate the new root
                pseudoElement: "::view-transition-new(root)",
            },
        );
    };

    toggleBtn?.addEventListener("click", toggleTheme);
</script>
